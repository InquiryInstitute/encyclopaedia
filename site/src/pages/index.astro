---
// The Encyclopædia - Home Page - Bookshelf View
const volumes = [
  { num: 'I', title: 'Mind', season: 'Spring', status: 'active', entries: 29 },
  { num: 'II', title: 'Language & Meaning', season: 'Spring', status: 'planned', entries: 19 },
  { num: 'III', title: 'Nature', season: 'Spring', status: 'planned', entries: 19 },
  { num: 'IV', title: 'Measure', season: 'Summer', status: 'planned', entries: 19 },
  { num: 'V', title: 'Society', season: 'Summer', status: 'planned', entries: 19 },
  { num: 'VI', title: 'Art & Form', season: 'Summer', status: 'planned', entries: 19 },
  { num: 'VII', title: 'Knowledge', season: 'Autumn', status: 'planned', entries: 20 },
  { num: 'VIII', title: 'History', season: 'Autumn', status: 'planned', entries: 19 },
  { num: 'IX', title: 'Ethics', season: 'Autumn', status: 'planned', entries: 20 },
  { num: 'X', title: 'Machines', season: 'Winter', status: 'planned', entries: 20 },
  { num: 'XI', title: 'Futures', season: 'Winter', status: 'planned', entries: 20 },
  { num: 'XII', title: 'Limits', season: 'Winter', status: 'planned', entries: 21 },
];

const seasonColors: Record<string, { spine: string; accent: string; text: string }> = {
  Spring: { spine: '#2d4a3e', accent: '#4a7c59', text: '#c4d4bc' },
  Summer: { spine: '#8b4513', accent: '#d4a373', text: '#f5e6d3' },
  Autumn: { spine: '#722f37', accent: '#9c4a1a', text: '#e8d4c4' },
  Winter: { spine: '#1a1a2e', accent: '#2d3047', text: '#a8b4c4' },
};
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>The Encyclopædia | Inquiry Institute</title>
  <meta name="description" content="A seasonal, multi-volume Encyclopædia demonstrating and inspiring inquiry. 12 volumes on a shelf." />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Cinzel:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-wood-dark: #3d2914;
      --color-wood: #5c3d1e;
      --color-wood-light: #8b6914;
      --color-shadow: rgba(0, 0, 0, 0.4);
      --color-gold: #c9a227;
      --color-cream: #f5f0e6;
      --font-display: 'Cinzel', 'Cormorant Garamond', Georgia, serif;
      --font-body: 'Cormorant Garamond', Georgia, serif;
    }
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
      font-family: var(--font-body);
      background: linear-gradient(180deg, #1a1512 0%, #2a1f18 50%, #1a1512 100%);
      color: var(--color-cream);
      min-height: 100vh;
      overflow-x: hidden;
    }
    
    header {
      text-align: center;
      padding: 3rem 2rem 2rem;
    }
    
    h1 {
      font-family: var(--font-display);
      font-size: clamp(1.8rem, 5vw, 3.5rem);
      font-weight: 400;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      color: var(--color-gold);
      text-shadow: 0 2px 4px rgba(0,0,0,0.5);
      margin-bottom: 0.5rem;
    }
    
    .subtitle {
      font-family: var(--font-body);
      font-size: 1rem;
      font-style: italic;
      color: #a89080;
      letter-spacing: 0.1em;
    }
    
    /* Bookshelf */
    .bookshelf-container {
      max-width: 1400px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    
    .shelf {
      position: relative;
      margin-bottom: 4rem;
    }
    
    .shelf-label {
      font-family: var(--font-display);
      font-size: 0.75rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: #6a5a4a;
      margin-bottom: 1rem;
      padding-left: 0.5rem;
    }
    
    .books-row {
      display: flex;
      justify-content: center;
      align-items: flex-end;
      gap: 4px;
      padding: 0 1rem 0;
      min-height: 320px;
    }
    
    /* Wood shelf */
    .shelf-wood {
      height: 24px;
      background: linear-gradient(180deg, 
        var(--color-wood-light) 0%, 
        var(--color-wood) 20%, 
        var(--color-wood-dark) 100%);
      border-radius: 0 0 3px 3px;
      box-shadow: 
        0 4px 8px rgba(0,0,0,0.4),
        inset 0 2px 4px rgba(255,255,255,0.1);
      position: relative;
    }
    
    .shelf-wood::before {
      content: '';
      position: absolute;
      top: -4px;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(180deg, 
        var(--color-wood) 0%, 
        var(--color-wood-dark) 100%);
      border-radius: 2px 2px 0 0;
    }
    
    /* Book spine */
    .book {
      position: relative;
      width: clamp(50px, 8vw, 85px);
      cursor: pointer;
      transform-origin: bottom center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .book:hover {
      transform: translateY(-12px) rotate(-2deg);
      z-index: 10;
    }
    
    .book:hover .spine {
      box-shadow: 
        4px 4px 12px rgba(0,0,0,0.5),
        -2px 0 8px rgba(0,0,0,0.3);
    }
    
    .spine {
      height: clamp(240px, 35vw, 300px);
      border-radius: 3px 6px 6px 3px;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      padding: 1.2rem 0.4rem;
      box-shadow: 
        3px 3px 8px rgba(0,0,0,0.4),
        -1px 0 4px rgba(0,0,0,0.2),
        inset -8px 0 12px rgba(0,0,0,0.15),
        inset 2px 0 4px rgba(255,255,255,0.1);
      overflow: hidden;
      transition: box-shadow 0.3s ease;
    }
    
    /* Spine texture */
    .spine::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        repeating-linear-gradient(
          90deg,
          transparent,
          transparent 2px,
          rgba(0,0,0,0.03) 2px,
          rgba(0,0,0,0.03) 3px
        );
      pointer-events: none;
    }
    
    /* Gold bands */
    .spine::after {
      content: '';
      position: absolute;
      top: 8%;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, 
        transparent 10%, 
        var(--color-gold) 20%, 
        var(--color-gold) 80%, 
        transparent 90%);
      box-shadow: 
        0 calc(var(--spine-height, 260px) * 0.84) 0 0 var(--color-gold);
      opacity: 0.6;
    }
    
    .volume-num {
      font-family: var(--font-display);
      font-size: clamp(0.9rem, 2vw, 1.3rem);
      font-weight: 600;
      letter-spacing: 0.1em;
      text-shadow: 0 1px 2px rgba(0,0,0,0.3);
    }
    
    .volume-title {
      writing-mode: vertical-rl;
      text-orientation: mixed;
      transform: rotate(180deg);
      font-family: var(--font-display);
      font-size: clamp(0.55rem, 1.2vw, 0.75rem);
      font-weight: 500;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      text-align: center;
      max-height: 140px;
      overflow: hidden;
      line-height: 1.3;
      text-shadow: 0 1px 2px rgba(0,0,0,0.3);
    }
    
    .edition-mark {
      font-family: var(--font-body);
      font-size: 0.5rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      opacity: 0.7;
    }
    
    /* Active volume glow */
    .book.active .spine {
      box-shadow: 
        3px 3px 8px rgba(0,0,0,0.4),
        -1px 0 4px rgba(0,0,0,0.2),
        inset -8px 0 12px rgba(0,0,0,0.15),
        inset 2px 0 4px rgba(255,255,255,0.1),
        0 0 20px rgba(201, 162, 39, 0.3);
    }
    
    .book.active::before {
      content: '●';
      position: absolute;
      bottom: -28px;
      left: 50%;
      transform: translateX(-50%);
      color: var(--color-gold);
      font-size: 0.5rem;
    }
    
    /* Footer */
    footer {
      text-align: center;
      padding: 2rem;
      color: #6a5a4a;
      font-size: 0.85rem;
    }
    
    footer a {
      color: var(--color-gold);
      text-decoration: none;
    }
    
    footer a:hover {
      text-decoration: underline;
    }
    
    .stats {
      display: flex;
      justify-content: center;
      gap: 3rem;
      margin: 2rem 0;
    }
    
    .stat {
      text-align: center;
    }
    
    .stat-num {
      font-family: var(--font-display);
      font-size: 1.8rem;
      color: var(--color-gold);
    }
    
    .stat-label {
      font-size: 0.7rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: #6a5a4a;
    }
    
    /* Edition toggle */
    .edition-toggle {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin: 1.5rem 0;
    }
    
    .edition-btn {
      padding: 0.5rem 1.5rem;
      font-family: var(--font-display);
      font-size: 0.7rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      border: 1px solid #4a3a2a;
      background: transparent;
      color: #8a7a6a;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .edition-btn.active {
      background: var(--color-gold);
      border-color: var(--color-gold);
      color: #1a1512;
    }
    
    .edition-btn:hover:not(.active) {
      border-color: var(--color-gold);
      color: var(--color-gold);
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .books-row {
        flex-wrap: wrap;
        gap: 8px;
        min-height: auto;
        padding: 1rem;
      }
      
      .book {
        width: 60px;
      }
      
      .spine {
        height: 200px;
      }
      
      .volume-title {
        font-size: 0.5rem;
        max-height: 100px;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>The Encyclopædia</h1>
    <p class="subtitle">A Publication of the Inquiry Institute</p>
    
    <div class="edition-toggle">
      <button class="edition-btn active">Adult Edition</button>
      <button class="edition-btn">Children's Edition</button>
    </div>
    
    <div class="stats">
      <div class="stat">
        <div class="stat-num">12</div>
        <div class="stat-label">Volumes</div>
      </div>
      <div class="stat">
        <div class="stat-num">348</div>
        <div class="stat-label">Entries</div>
      </div>
      <div class="stat">
        <div class="stat-num">150+</div>
        <div class="stat-label">Authors</div>
      </div>
    </div>
  </header>
  
  <main class="bookshelf-container">
    <!-- Spring & Summer Shelf -->
    <section class="shelf">
      <div class="shelf-label">Spring · Summer</div>
      <div class="books-row">
        {volumes.slice(0, 6).map(vol => {
          const colors = seasonColors[vol.season];
          return (
            <div class={`book ${vol.status === 'active' ? 'active' : ''}`} data-volume={vol.num}>
              <div class="spine" style={`background: linear-gradient(135deg, ${colors.spine} 0%, ${colors.accent} 100%); color: ${colors.text}; --spine-height: 260px;`}>
                <span class="volume-num">{vol.num}</span>
                <span class="volume-title">{vol.title}</span>
                <span class="edition-mark">Adult</span>
              </div>
            </div>
          );
        })}
      </div>
      <div class="shelf-wood"></div>
    </section>
    
    <!-- Autumn & Winter Shelf -->
    <section class="shelf">
      <div class="shelf-label">Autumn · Winter</div>
      <div class="books-row">
        {volumes.slice(6, 12).map(vol => {
          const colors = seasonColors[vol.season];
          return (
            <div class={`book ${vol.status === 'active' ? 'active' : ''}`} data-volume={vol.num}>
              <div class="spine" style={`background: linear-gradient(135deg, ${colors.spine} 0%, ${colors.accent} 100%); color: ${colors.text}; --spine-height: 260px;`}>
                <span class="volume-num">{vol.num}</span>
                <span class="volume-title">{vol.title}</span>
                <span class="edition-mark">Adult</span>
              </div>
            </div>
          );
        })}
      </div>
      <div class="shelf-wood"></div>
    </section>
  </main>
  
  <footer>
    <p style="font-style: italic; margin-bottom: 1rem; color: #8a7a6a;">
      "Canon must stand alone if all marginalia is removed."
    </p>
    <p>
      <a href="https://inquiry.institute">Inquiry Institute</a> · 
      CC BY 4.0 · 
      <a href="https://github.com/InquiryInstitute/encyclopaedia">GitHub</a>
    </p>
  </footer>
</body>
</html>
